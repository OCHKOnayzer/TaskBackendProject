{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "mocha", "chai", "sinon"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/test/**/*.ts"]
}